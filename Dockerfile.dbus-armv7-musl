# rustembedded/cross:armv7-unknown-linux-musleabihf
FROM rustembedded/cross@sha256:9c7a99444e339efb24a25a9f684a8f2cc774ddb9e049668efef3a7de492a2a56

# Install libdbus libraries and pkg-config
RUN dpkg --add-architecture armhf && \
	apt-get update && \
	apt-get install --assume-yes libdbus-1-dev libdbus-1-dev:armhf pkg-config
