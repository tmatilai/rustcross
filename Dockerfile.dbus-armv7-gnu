# rustembedded/cross:armv7-unknown-linux-gnueabihf
FROM rustembedded/cross@sha256:d628d4c4a61ea4d9bb59596eb02178d0b2789e770e2fe391cb1d86cf8301919a

# Install libdbus libraries and pkg-config
RUN dpkg --add-architecture armhf && \
	apt-get update && \
	apt-get install --assume-yes libdbus-1-dev libdbus-1-dev:armhf pkg-config
